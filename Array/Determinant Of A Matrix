#include<iostream>
using namespace std;
int main()
{
    int i,j,n,result;
    cout<<"Enter Matrix Order 2 or 3:";
    cin>>n;
    int arr[n][n];
    cout<<"Enter"<<n<<"Ã—"<<n<<"Matrix Value:\n";
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            cout<<"Array["<<i<<"]["<<j<<"]=";
            cin>>arr[i][j];
        }
    }
    cout<<"Matrix:\n";
    for(i=0; i<n; i++)
    {
        for(j=0; j<n; j++)
        {
            cout<<arr[i][j]<<" ";
        }
        cout<<"\n";
    }
    cout<<"Determinant:";
    if(n==2)
    {
    result=(arr[0][0]*arr[1][1])-(arr[0][1]*arr[1][0]) ;
    }
    else if(n==3)
    {
    result=arr[0][0]*( (arr[1][1]*arr[2][2]) - (arr[1][2]*arr[2][1]) ) - arr[0][1]*( (arr[1][0]*arr[2][2]) - (arr[1][2]*arr[2][0]) ) + arr[0][2]*( (arr[1][0]*arr[2][1]) - (arr[1][1]*arr[2][0]) );
    }
    cout<<result;
    return 0;
}
