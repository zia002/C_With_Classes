//One's Complement
#include<iostream>
using namespace std;
int main()
{
    int n,i,arr[8],comarr[8];
    cout<<"Enter 8 digit one by one binary value:";
    for(i=0; i<8; i++)
    {
        cin>>arr[i];
        if(arr[i]==0)
        {
            comarr[i]=1;
        }
        else if(arr[i]==1)
        {
            comarr[i]=0;
        }
    }
    cout<<"Your binary value is:";
    for(i=0; i<8; i++)
    {
        cout<<arr[i];
    }
    cout<<"\nComplement Of your binary number:";
    for(i=0; i<8; i++)
    {
        cout<<comarr[i];
    }
    return 0;
}
