//One's and Two's Complement
//Enter Binary Value one by one like,0 1 1 0 1 1 0 0..ğŸ¤
#include<iostream>
using namespace std;
int main()
{
    int n,i,arr[8],comarr[8],tcomarr[8];
    cout<<"Enter 8 digit one by one binary value:";
    for(i=0; i<8; i++)
    {
        cin>>arr[i];
        if(arr[i]==0)
        {
            comarr[i]=1;
        }
        else if(arr[i]==1)
        {
            comarr[i]=0;
        }
    }
    cout<<"Your binary value is:";
    for(i=0; i<8; i++)
    {
        cout<<arr[i];
    }
    cout<<"\nOne's Complement:";
    for(i=0; i<8; i++)
    {
        cout<<comarr[i];
    }
    int carry=1;
    for(i=0; i<8; i++)
    {
        if( ( comarr[7-i] + carry == 2))
        {
            tcomarr[7-i]=0;
            carry=1;
        }
        else if(( comarr[7-i] + carry == 1))
        {
            tcomarr[7-i]=1;
            carry=0;
        }
        else if(( comarr[7-i] + carry == 0))
        {
            tcomarr[7-i]=0;
            carry=0;
        }
    }
    cout<<"\nTwo's Complement is:";
    for(i=0; i<8; i++)
    {
        cout<<tcomarr[i];
    }

    return 0;
}
