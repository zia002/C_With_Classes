//Rhombus:
#include<iostream>
using namespace std;
int main()
{
    int n,i,j;
    cout<<"Enter n value:";
    cin>>n;
    for(i=1; i<=n; i++)
    {
        for(j=1; j<=(n-i); j++)
        {
            cout<<" ";
        }
        for(j=1; j<=n; j++)
        {
            cout<<"â˜… ";
        }
        cout<<"\n";
    }
    return 0;
}
