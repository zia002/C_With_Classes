//how many digit in this number? and summation of the digits..
#include<iostream>
using namespace std;
int main()
{
    int n,tem,count=0,rem;
    int sum=0;
    cout<<"Enter Your number:";
    cin>>n;
    tem=n;
    while(tem!=0)
    {
    rem=tem%10 ;
    sum=sum+rem; //To summation the digits of the number
    tem=tem/10 ;
    count=count+1; //To count digit
    }
    cout<<"There are "<<count<<" numbers.\n";
    cout<<"Sum of the digits= "<<sum;
    return 0;
}
